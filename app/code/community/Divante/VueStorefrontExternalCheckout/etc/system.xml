<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <vuestorefrontexternalcheckout translate="label" module="vuestorefrontexternalcheckout">
            <label>External Checkout</label>
            <frontend_type>text</frontend_type>
            <tab>advanced</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <vuestorefrontexternalcheckout_group translate="label" module="vuestorefrontexternalcheckout">
                    <label>External Checkout</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <vuestorefront_url translate="label">
                            <label>Storefront URL:</label>
                            <comment>URL to VSF</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </vuestorefront_url>
                        <externalcheckout_url translate="label">
                            <label>Success VSF path:</label>
                            <comment>path to VSF success page use /order-success for default</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </externalcheckout_url>
                        <redirect_all translate="label">
                            <label>Redirect to VSF homepage</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </redirect_all>
                        <exclude_route translate="label">
                            <label>exclude Route from redirect:</label>
                            <comment>List of routes to exclude from redirect to vsf</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </exclude_route>
                    </fields>
                </vuestorefrontexternalcheckout_group>
            </groups>
        </vuestorefrontexternalcheckout>
    </sections>
</config>
